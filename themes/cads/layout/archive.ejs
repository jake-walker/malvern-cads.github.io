<section id="archive">
  <% var year = 0 %>
  <% var change = false %>
  <% page.posts.sort('date', 'desc').each(function(post) { %>
    <% var itemYear = date(post.date, 'YYYY') - 0 %>
    <% change = year !== itemYear %>
    <% year = change ? itemYear : year %>
    <% if (change) { %>
      </ul>
      </div>
      <div class="container" id="archives-<%= year %>">
      <h2><%= year %></h2>
      <ul class="list-group">
    <% } %>
    <li class="list-group-item">
      <p class="mb-0">
        <span>
          <%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %>
        </span>
        - <%- partial('_partial/post/date', { post: post }) %>
      </p>
    </li>
  <% }); %>
  </ul>
  </div>

  <%- partial('_partial/pagination') %>
</section>
