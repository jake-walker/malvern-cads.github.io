<section id="footer" class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h5><%= config.title %></h5>
        <p class="text-muted d-none d-md-block"><%= config.subtitle %></p>
      </div>
      <div class="col-md-6 text-right">
        <h5>Nav</h5>
        <ul class="nav flex-column">
          <% for (var i in theme.nav) { %> 
            <li>
              <a href="<%- url_for(theme.nav[i]) %>"><%= __('nav.'+i).replace("nav.", "") %></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</section>
